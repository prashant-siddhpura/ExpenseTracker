{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "buildCommand": "npm run build"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/dist/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }